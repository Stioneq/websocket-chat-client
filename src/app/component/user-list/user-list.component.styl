:host
  display flex
  flex-direction column
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none1
  .user-item
    display flex
    flex-direction column
    justify-content start
    padding 10px
    border-bottom: 1px solid #04a2de;
    box-shadow: 4px 0px 11px 2px #65aaff
    .row2x1
      display flex
      flex-direction row
      justify-content start
      align-items center
      .user-icon
        border-radius 50%
        min-width 48px
        width 48px
        margin-right 10px
        min-height 48px
        height 48px
      .user-text
        text-transform: capitalize
        font-weight: bold
        color #999
        overflow hidden
        white-space nowrap



