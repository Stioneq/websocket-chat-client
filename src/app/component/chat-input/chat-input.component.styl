@import "../../../palette.styl"

.input-container
  display flex
  flex-grow 1
  position relative
  flex-direction row
  .chat-input
    flex-grow 1
    border 1px solid $divider-color

    background $primary-color-dark
    color $primary-color-text
    outline none
    caret-color: $primary-color-text
    font-size 24px
    padding 10px
    height 50px
  .input-tooltip
    position absolute
    bottom 0
    left 0
    width 100px
    height 100px
    background  $primary-color
