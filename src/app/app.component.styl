
:host
  height 100%
  width 100%

  display flex
  flex-direction column

  .chat-input
    border 1px solid #999
    background #111
    color greenyellow
    outline none
    font-size 24px
    padding 10px
    height 50px
  .row2x1
    flex-grow 1
    display flex
    flex-direction row
    app-chat-area
      flex-grow 1
      background: linear-gradient(90deg,#000,#333);
    app-user-list
      box-shadow: -1px 0px 4px 2px #999
      width 200px
      max-width 200px
      background #333
  app-progress
    position absolute
    left 50%
    top 50%
    transform translate(-50%,-50%)
    width 100px
    height 100px
    z-index  100

