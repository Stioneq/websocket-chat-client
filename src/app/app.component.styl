@import "../palette.styl"

:host
  display flex
  height 100%
  width 100%
  flex-direction column
  header
    background #34302d
    z-index 10
    height 50px
    flex-grow 0
    display: flex
    align-items: center;
    justify-content: flex-end;
    .logout
      border-radius 50%
      color: #333;
      background: #999;
      padding 5px
      box-sizing content-box
      margin-right 10px
      user-select none
      &:hover
        background #6db33f
        color: #fff
      border none
  .content
    flex-grow: 1
    display flex
    background #f1f1f1
    height 100%
    width 100%
    flex-direction column

